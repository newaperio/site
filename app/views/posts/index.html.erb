<% if !@posts.blank? %>
  <% for post in @posts %>
	<article>
		<header>
			<h2><%= post.title %></h2>
			<div class="meta"><time datetime="<%= post.updated_at %>" pubdate>March 19, 2011</time> &mdash; <p><%= pluralize(post.comments.count,"comment") %></p></div>
		</header>
		<p><%= truncate(post.content, :length => 500, :seperator => " ") %></p>
		<% if post.content.length > 500 %><p><%= link_to "Continued", post %></p><% end %>
	</article>
  <% end %>
<% else %>
  <p>Coming soon!</p>
<% end %>

<%= paginate @posts %>