<% for post in @posts %>
<article>
	<header>
		<h2><%= link_to post.title, post %></h2>
		<div class="meta"><time datetime="<%= post.updated_at %>" pubdate><%= post.updated_at.to_s(:short) %></time> &mdash; <p><%= pluralize(post.comments.count,"comment") %></p></div>
	</header>
	<p><%= simple_format(post.content) %></p>
</article>
<% end %>

<%= paginate @posts %>