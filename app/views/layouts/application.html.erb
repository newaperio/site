<!--[if gt IE 8]><!--> <html class="no-js" lang="en"> <!--<![endif]-->
<head>
  <meta charset="utf-8">

  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  <title><% if content_for(:title).present? %><%= yield(:title) %> &mdash; NewAperio<% else %>NewAperio &mdash; Web and Mobile Engineering in Baton Rouge, Louisiana<% end %></title>
  <meta name="description" content="NewAperio is a web, iPhone, iPad, iOS, Android and Blackberry app development and design collective in Baton Rouge, Louisiana. We're a group of web and mobile entrepreneurs and engineers who love creating magnificient apps for our clients.">
  <meta name="author" content="NewAperio">
	<meta name="keywords" content="web app, web development, app, app development, engineer, entrepreneur, iPhone, iPad, iOS, Android, Blackberry" />

  <meta name="viewport" content="width=device-width,initial-scale=1">

	<%= auto_discovery_link_tag :atom, feed_post_index_url("atom") %>
	<%= auto_discovery_link_tag :rss, feed_post_index_url("rss") %>

  <%= stylesheet_link_tag "application" %>
  <%= javascript_include_tag "modernizr" %>
  <%= csrf_meta_tag %>	
</head>

<body>

  <div id="container">
    <header id="head" class="clearfix">
			<h1 id="logo"><a href="/" title="NewAperio" class="ir">NewAperio</a></h1>
			<nav role="header">
				<a href="/about" title="About NewAperio" id="nav_about" class="ir">About</a>
				<a href="/portfolio" title="NewAperio's Portfolio" id="nav_portfolio" class="ir">Portfolio</a>				
				<a href="/blog" title="NewAperio Blog" id="nav_blog" class="ir">Blog</a>
				<a href="/contact" title="Contact NewAperio" id="nav_contact" class="ir">Contact</a>
			</nav>
    </header>
    <div id="main" role="main" class="clearfix">
		<% flash.each do |name, msg| %>
		  <%= content_tag :div, msg, :id => "flash_#{name}" %>
		<% end %>
		<%= yield %>
    </div>
    <div class="push"></div>
  </div> <!--! end of #container -->

  <footer class="clearfix">
		<div id="footercontent">
			<nav role="footer">
				<a href="/about" title="About NewAperio">about</a>
				<a href="/portfolio" title="NewAperio's Portfolio">portfolio</a>				
				<a href="/blog" title="NewAperio Blog" id="nav_blog">blog</a>
				<a href="/contact" title="Contact NewAperio" id="nav_contact">contact</a>
			</nav>
			<address>
				<p>&copy;2011, NewAperio, LLC</p>
				<a href="mailto:hello@newaperio.com">hello@newaperio.com</a>
				<p>225/328.7022</p>
				<p>From Baton Rouge, with love.</p>
			</address>			
		</div>
  </footer>
  
  <%= javascript_include_tag "application" %>

  <%= render :partial => 'layouts/ga' if Rails.env.production? %>

  <!--[if lt IE 7 ]>
    <script defer src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.3/CFInstall.min.js"></script>
    <script defer>window.attachEvent('onload',function(){CFInstall.check({mode:'overlay'})})</script>
  <![endif]-->
</body>
</html>